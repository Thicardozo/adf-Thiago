{
	"name": "LeituraArquivos",
	"properties": {
		"description": "Listar arquivos disponibilizados no diret칩rio de entrada.",
		"activities": [
			{
				"name": "ListarAqruivos",
				"description": "Listar arquivos disponibilizados no diret칩rio de entrada.",
				"type": "GetMetadata",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "Arq_ArquivosEntrada_txt",
						"type": "DatasetReference"
					},
					"fieldList": [
						"childItems"
					],
					"storeSettings": {
						"type": "AzureBlobFSReadSettings",
						"recursive": true,
						"enablePartitionDiscovery": false
					},
					"formatSettings": {
						"type": "DelimitedTextReadSettings"
					}
				}
			},
			{
				"name": "LoopCarga",
				"description": "Executar Loop respons치vel pela leitura dos arquivos e carga no banco.",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "ListarAqruivos",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('ListarAqruivos').output.childItems",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "CarregarDados",
							"description": "Executar carga de dados na Stage, tabela stg.ArquivosEntrada.",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "DelimitedTextSource",
									"additionalColumns": [
										{
											"name": "NomeArquivo",
											"value": "$$FILEPATH"
										}
									],
									"storeSettings": {
										"type": "AzureBlobFSReadSettings",
										"recursive": true,
										"wildcardFolderPath": "ArquivosEntrada",
										"wildcardFileName": {
											"value": "@item().name",
											"type": "Expression"
										},
										"enablePartitionDiscovery": false
									},
									"formatSettings": {
										"type": "DelimitedTextReadSettings"
									}
								},
								"sink": {
									"type": "SqlServerSink",
									"preCopyScript": "TRUNCATE TABLE stg.ArquivosEntrada;"
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"mappings": [
										{
											"source": {
												"type": "String",
												"ordinal": 1
											},
											"sink": {
												"name": "txtDados",
												"type": "String",
												"physicalType": "varchar"
											}
										},
										{
											"source": {
												"name": "NomeArquivo",
												"type": "String"
											},
											"sink": {
												"name": "nomArquivo",
												"type": "String",
												"physicalType": "varchar"
											}
										}
									],
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "Arq_ArquivosEntrada_txt",
									"type": "DatasetReference"
								}
							],
							"outputs": [
								{
									"referenceName": "Tab_ArquivosEntrada",
									"type": "DatasetReference"
								}
							]
						}
					]
				}
			},
			{
				"name": "CargaStage",
				"description": "Procedure respons치vel pela carga de dados na Stage.",
				"type": "SqlServerStoredProcedure",
				"dependsOn": [
					{
						"activity": "LoopCarga",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"storedProcedureName": "[dbo].[sp_carga_arquivos_stage]"
				},
				"linkedServiceName": {
					"referenceName": "bd_sqlserver_massificados",
					"type": "LinkedServiceReference"
				}
			}
		],
		"annotations": []
	}
}